{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "vite.config.ts", "vite-env.d.ts"],
  "exclude": ["node_modules", "dist", "build", "out", "coverage", "**/*.spec.ts", "**/*.test.ts"]
}